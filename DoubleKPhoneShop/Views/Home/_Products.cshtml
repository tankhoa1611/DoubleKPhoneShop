                    <div class="card-body" onclick='location.href="@Url.Action("Details", "Product",new { id=product.ProductId })"'>
                        <div style="color: red;text-align: center; width: 25%; border: 2px solid gray; border-radius: 200px 25px;">
                            Sold-Out
                        </div>
                        <div>
                            <img class="card-img" src="~/images/@product.Image" alt="">
                        </div>
                        <div class="card-infor">
                            <div class="card-name">
                                @product.ProductName
                            </div>
                            <div class="card-price text-danger">
                                @product.Price.ToString("#,##0").Replace(',', '.') VNĐ
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form style="color:black" action="@Url.Action("AddItem","Cart")">
                            @*<a style="float:left;" href="@Url.Action("AddItem", "Cart",new { id=product.ProductId })" class="btn btn-info">Buy now</a>*@
                            <input readonly class="buy form-control" id="buy" type="number" max=@product.Quantity value="0" name="quantity" />
