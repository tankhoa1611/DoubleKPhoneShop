                            <input id="maxquantity" type="hidden" value="@product.ProductId" name="id" />
                        </form>
                    </div>
                </div>
            }
            if (product.Quantity != 0 && product.Status == "new")
            {
                <div class="col-lg-3 col-md-6 card product-partial">
