                        </div>
                    </div>
                    <div class="card-footer">
                        <form style="color:black" action="@Url.Action("AddItem","Cart")">
                            @*<a style="float:left;" href="@Url.Action("AddItem", "Cart",new { id=product.ProductId })" class="btn btn-info">Buy now</a>*@
                            <input class="buy form-control" id="buy" type="number" min="1" max=@product.Quantity value="1" name="quantity" />
                            <input class="buy form-control" type="submit" value="Buy now" />
                            <input id="maxquantity" type="hidden" value="@product.ProductId" name="id" />
                        </form>
                    </div>
                </div>
            }
