@model DoubleKPhoneShop.Models.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giám sát đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OrderId)
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.Pay, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <div class="checkbox">
                @Html.DisplayFor(model => model.Pay)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Receiver, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.Receiver, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Receiver, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PhoneReceive, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.PhoneReceive, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneReceive, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AddressReceive, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.AddressReceive, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AddressReceive, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PaymentMethod, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.PaymentMethod, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TotalPay, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.TotalPay, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
            @Html.ValidationMessageFor(model => model.TotalPay, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            <select name="status" class="form-control">
                <option value="notconfirm">notconfirm</option>
                <option value="confirmed">confirmed</option>
                <option value="wait">wait</option>
                <option value="shipping">shipping</option>
                <option value="done">done</option>
            </select>
        </div>
    </div>
    <h2>Thông tin đơn hàng</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Tên mặt hàng")
            </th>
            <th>
                @Html.DisplayName("Số lượng")
            </th>
            <th>@Html.DisplayName("Giá")</th>
        </tr>
        @foreach (var detai in Model.OrderDetails)
        {

            <tr>
                <td>@Html.DisplayFor(item => detai.Product.ProductName)</td>
                <td>@Html.DisplayFor(item => detai.Quantity)</td>
                <td>
                    @Html.DisplayFor(item => detai.Product.Price)
                </td>
            </tr>
        }
        <tr>
            <td>
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-default" />
            </td>
        </tr>
    </table>
</div>
}

